{{!< default}}

{{#post}}
    <article class="{{post_class}}">
        <div class="post-text">
            <div class="post-meta small-caps">
                {{#if @custom.show_author}}
                    {{primary_author.name}} &mdash;
                {{/if}}
                <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="Do MMMM, YYYY"}}</time>
            </div>

            <h2 class="post-title">{{title}}</h2>

            {{#if custom_excerpt}}
                <p class="post-excerpt">{{excerpt}}</p>
            {{/if}}

            {{#if feature_image}}
                <figure class="post-image">
                    <img src="{{img_url feature_image size="l"}}"
                        alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                    />
                    {{#if feature_image_caption}}
                        <figcaption>{{feature_image_caption}}</figcaption>
                    {{/if}}
                </figure>
            {{/if}}

            <div class="gh-content post-content">
                <p>{{content}}</p>
            </div>
        </div>
    </article>
{{/post}}
