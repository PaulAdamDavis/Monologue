{{!< default}}

<article class="gh-post">
    {{#tag}}
        <header class="gh-post-head gh-canvas">
            <div class="post-meta small-caps">
                A collection of {{plural ../pagination.total empty='zero posts' singular='% post' plural='% posts'}}
            </div>

            <h2 class="post-title">{{name}}</h2>

            {{#if description}}
                <p class="post-excerpt">{{description}}</p>
            {{/if}}

            {{#if feature_image}}
                <figure class="kg-card kg-image-card {{#if feature_image_caption}}kg-card-hascaption{{/if}}">
                    <img src="{{img_url feature_image size="l" format="webp"}}"
                        alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                    />
                    {{#if feature_image_caption}}
                        <figcaption>{{feature_image_caption}}</figcaption>
                    {{/if}}
                </figure>
            {{/if}}
        </header>
    {{/tag}}

    <div class="gh-content gh-canvas">
        {{#tag}}
            {{#unless feature_image}}
                <hr style="margin-top: 0;">
            {{/unless}}
        {{/tag}}
        <ol reversed>
            {{#foreach posts}}
                <li><time class="post-meta small-caps" datetime="{{date format="YYYY-MM-DD"}}">{{date format="Do MMMM, YYYY"}}</time> <a href="{{url}}">{{title}}</a></li>
            {{/foreach}}
        </ol>
    </div>
</article>

{{pagination}}
