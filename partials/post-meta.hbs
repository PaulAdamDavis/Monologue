<div class="post-meta small-caps">
    {{^has visibility="public"}}
        {{> "icons/lock"}}
    {{/has}}

    {{#if featured}}
        {{> "icons/fire"}}
    {{/if}}

    {{#primary_tag}}
        {{#is "post"}}
            <a href="{{url}}" title="{{name}}" class="tag tag-{{slug}}">{{name}}</a>
        {{else}}
            <span class="tag">{{name}}</span>
        {{/is}}
    {{/primary_tag}}

    {{#if @custom.show_author}}
        {{#primary_author}}
            {{#is "post"}}
                <a href="{{url}}" title="{{name}}" class="author author-{{slug}}">{{name}}</a>
            {{else}}
                <span>{{name}}</span>
            {{/is}}
        {{/primary_author}}
    {{/if}}

    <time datetime="{{date format="dddd, MMMM Do YYYY, h:mm:ss a"}}">{{date format="D MMM, YYYY"}}</time>

    {{#if @custom.show_reading_time}}
        <span>{{reading_time}}</span>
    {{/if}}

    {{comment_count autowrap="span"}}
</div>