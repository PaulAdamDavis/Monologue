<article class="post-card-small {{post_class}} {{#if feature_image}}has-image{{/if}} {{#if custom_excerpt}}has-custom-excerpt{{else}}no-custom-excerpt{{/if}}">
    <a href="{{url}}" class="post-card-small-inner">
        {{#if feature_image}}
            <div class="post-card-small-image">
                <img class="post-card-small-image"
                    src="{{img_url feature_image size="s"}}"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                    loading="lazy"
                />
            </div>
        {{/if}}

        <div class="post-card-small-text">
            <div class="post-card-small-meta small-caps">
                {{#if @custom.show_author}}
                    {{primary_author.name}} &mdash;
                {{/if}}
                <time class="post-card-small-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="Do MMMM, YYYY"}}</time>
            </div>

            <h2 class="post-card-small-title h6">{{title}}</h2>

            <p class="post-card-small-excerpt">{{excerpt characters="300"}}</p>
        </div>
    </a>
</article>
