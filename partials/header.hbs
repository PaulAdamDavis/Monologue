<header class="gh-head">
    <div class="inner">

        <div class="gh-head-left">
            {{#if @site.logo}}
                <a class="gh-head-logo" href="{{@site.url}}">
                    <img src="{{img_url @site.logo absolute="true"}}" height="50" alt="{{@site.title}}" />
                </a>
            {{else}}
                <a class="gh-head-wordmark" href="{{@site.url}}">
                    <h2>{{@site.title}}</h2>
                </a>
            {{/if}}

            {{#if @site.description}}
                <p class="gh-head-description">{{@site.description}}</p>
            {{/if}}
        </div>

        <div class="gh-head-right">
            <input type="checkbox" id="gh-nav-toggle" class="gh-nav-toggle">
            <label for="gh-nav-toggle" class="gh-nav-toggle-faux">
                <svg viewBox="0 0 70 46">
                    <rect width="70" height="6"></rect>
                    <rect y="20" width="70" height="6"></rect>
                    <rect y="40" width="70" height="6"></rect>
                </svg>
            </label>

            <div class="gh-nav">
                {{navigation}}
                <button class="gh-search" data-ghost-search title="Open search">{{> "icons/search"}}</button>
            </div>
        </div>

    </div>
</header>