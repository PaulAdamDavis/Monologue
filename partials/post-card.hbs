<article class="post-card {{post_class}} {{#if feature_image}}has-image{{/if}} {{#if custom_excerpt}}has-custom-excerpt{{else}}no-custom-excerpt{{/if}} gh-canvas">
    {{#if feature_image}}
        <a href="{{url}}" class="post-card-image">
            <img srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1000w,
                        {{img_url feature_image size="xl"}} 2000w"
                sizes="(max-width: 1000px) 400px, 800px"
                src="{{img_url feature_image size="m"}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                loading="lazy"
            />
        </a>
    {{/if}}

    <a href="{{url}}" class="post-card-inner post-card-text">

        {{> "post-meta"}}

        <h2 class="post-card-title h3">
            {{title}}
        </h2>

        <p class="post-card-excerpt">{{excerpt characters="400"}}</p>
    </a>
</article>
