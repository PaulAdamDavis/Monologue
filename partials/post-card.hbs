<article class="post-card {{post_class}}">
    <div class="post-card-text">
        {{^is "page"}}
            <div class="post-card-meta small-caps">
                {{#if @custom.show_author}}
                    {{primary_author.name}} &mdash;
                {{/if}}
                <time class="post-card-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="Do MMMM, YYYY"}}</time>
            </div>
        {{/is}}

        {{#is "post"}}
            <h2 class="post-card-title">{{title}}</h2>
        {{else}}
            <h2 class="post-card-title"><a href="{{url}}">{{title}}</a></h2>
        {{/is}}

        {{#if custom_excerpt}}
            <p class="post-card-excerpt">{{excerpt}}</p>
        {{/if}}

        {{#if feature_image}}
            <img class="post-card-image"
                src="{{img_url feature_image size="2"}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                loading="lazy"
            />
        {{/if}}

        <div class="gh-content post-card-content">
            <p>{{content}}</p>
        </div>
    </div>
</article>
