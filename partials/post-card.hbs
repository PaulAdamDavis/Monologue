<article class="post-card {{post_class}} {{#if feature_image}}has-image{{/if}} {{#if custom_excerpt}}has-custom-excerpt{{else}}no-custom-excerpt{{/if}}">
    <a href="{{url}}" class="post-card-inner">
        {{#if feature_image}}
            <div class="post-card-image">
                <img class="post-card-image"
                    src="{{img_url feature_image size="s"}}"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                    loading="lazy"
                />
            </div>
        {{/if}}

        <div class="post-card-text">
            <div class="post-card-meta small-caps">
                {{#if @custom.show_author}}
                    {{primary_author.name}} &mdash;
                {{/if}}
                <time class="post-card-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="Do MMMM, YYYY"}}</time>
            </div>

            <h2 class="post-card-title h4">{{title}}</h2>

            <p class="post-card-excerpt">{{excerpt characters="400"}}</p>
        </div>
    </a>
</article>
