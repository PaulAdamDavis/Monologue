<article class="post-card {{post_class}}">
    <a class="post-card-link" href="{{url}}">
        {{#if feature_image}}
            <img class="post-card-image"
                src="{{img_url feature_image size="2"}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                loading="lazy"
            />
        {{/if}}

        <div class="post-card-text">
            <time class="post-card-date small-caps" datetime="{{date format="YYYY-MM-DD"}}">{{date format="Mo MMMM, YYYY"}}</time>
            <h2 class="post-card-title">{{title}}</h2>
            <div class="post-card-excerpt">
                <p>{{excerpt}}</p>
            </div>
        </div>
    </a>
</article>