{{!< default}}

<div class="gh-container gh-padded gh-index">
    {{#post}}
        <article class="gh-post {{post_class}}">
            <header class="gh-post-head gh-canvas">
                {{> "post-title"}}

                {{#if custom_excerpt}}
                    <p class="post-excerpt">{{excerpt}}</p>
                {{/if}}

                {{#if feature_image}}
                    <figure class="kg-card kg-image-card kg-width-wide {{#if feature_image_caption}}kg-card-hascaption{{/if}}">
                        <img src="{{img_url feature_image size="l"}}"
                            alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                        />
                        {{#if feature_image_caption}}
                            <figcaption>{{feature_image_caption}}</figcaption>
                        {{/if}}
                    </figure>
                {{/if}}
            </header>

            <div class="gh-content gh-canvas">
                {{content}}
            </div>
        </article>
    {{/post}}

    {{> "sidebar"}}
</>


